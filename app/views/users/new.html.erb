<h1>Create new user</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |e|%>
    <p> <%= e %></p>
  <% end %>
<% end %>


<%= form_for(@user, url: "create_user") do |f|%>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </p>

  <%= f.submit %>
<% end %>