<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1>Products</h1>
<table>
  <tfoot>
    <tr>
      <td colspan="3">
        <%= link_to 'New product', new_product_path %>
      </td>
    </tr>
  </tfoot>

  <div id="pages-products">
    <%= render 'products/products' %>
  </div>
</table>

<div id="paginator">
  <%= paginate @products, remote: true %>
</div>


